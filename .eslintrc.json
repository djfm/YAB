{
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".ts"]
      }
    }
  },
  "env": {
      "node": true,
      "es2021": true
  },
  "extends": [
      "airbnb-base",
      "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
  },
  "plugins": [
      "@typescript-eslint"
  ],
  "rules": {
    "import/extensions": [
      1, {
        ".ts": "never",
        ".tsx": "never"
      }
    ],
    "no-restricted-syntax": 0,
    "implicit-arrow-linebreak": 0,
    "@typescript-eslint/ban-ts-comment": 0,
    "no-use-before-define": 0
  }
}
